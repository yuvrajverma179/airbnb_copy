<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <br> </br>
            <h3>Create a New Listing </h3>
            <form method="POST" action="/listings">
                <div class="mb-3">
                    <lable for="title" class="form-label">Title</lable>
                    <input type="text" name="title" placeholder="Enter title" class="form-control"> 
                </div>
        
                <div class="mb-3">
                    <lable for="description" class="form-label">Description</lable>
                    <textarea type="text" name="description" class="form-control"></textarea> 
                </div>
        
                <div class="mb-3">
                    <lable for="image" class="form-label">Image</lable>
                    <input type="text" name="image" placeholder="Enter image URL/Link" class="form-control">
                </div>

                <div class="mb-3">
                    <lable for="price" class="form-label">Price</lable>
                    <input type="number" name="price" placeholder="Enter price" class="form-control">
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <lable for="location" class="form-label">Location</lable>
                        <input type="text" name="location" placeholder="Enter location" class="form-control">
                    </div>
            
                    <div class="mb-3 col-md-8">
                        <lable for="country" class="form-label">Country</lable>
                        <input type="text" name="country" placeholder="Enter country" class="form-control">
                    </div>
                </div>
                <br>
                <button class="btn btn-dark add-btn">Add</button>
                <br> </br>
            </form>
        </div>
    </div>
</body>
