<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class="col-8 offset-3 mt-3">
            <h3><b><%= listing.title %></b></h3>
        </div>

        <div class="card col-6 offset-3 show-card">
            <img src="<%= listing.image %>>" alt="listing_image" class="card-img-top show-img">
            <div class="card-body">
                <p class="card-text">
                    <%= listing.description %> <br>
                    &#8377;<%= listing.price.toLocaleString("en-IN") %> <br>
                    <%= listing.location %> <br>
                    <%= listing.country %>
                </p>
            </div>
        </div>
        
    </div>
    
        <div class="btns">
            <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
            <div class="col-1"></div>
            <form method="POST" action="/listings/<%= listing._id%>?_method=DELETE">
                <button class="btn btn-dark" class="btn btn-dark offset-4">Delete</button>
            </form>
        </div>

        <div class="col-8 offset-3">
            <hr>
            <h4>Leave a Review</h4>
            <form action="/listings/<%=listing._id%>/reviews" method = "POST">
                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" min="1" max="5" name="rating" class="form-range" id="review[rating]">
                </div>
                <div class="mb-3 mt-3">
                    <label for="comments" class="form-label">Comments</label>
                    <textarea name="review[comment]" id="comments" class="form-control" cols="30" rows="5"></textarea>
                </div>
                <button class="btn btn-outline-dark">Submit!</button>
            </form>
        </div>
    </div>
    <br></br>
</body>
